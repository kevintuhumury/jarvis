= simple_form_for @page do |form|
  = form.input :title
  = form.input :body, as: :bootsy, input_html: { rows: 10 }, editor_options: { color: false }
  = form.input :state, as: :radio_buttons, collection: page_states_collection

  = link_to "#", class: "advanced_options_toggler", name: "advanced_options" do
    %span.glyphicon.glyphicon-cog
    = t(".advanced_options")

  .advanced_options
    = form.input :parent_id, as: :select, collection: page_collection_for(@page), include_blank: t(".root"), hint: t(".hint.parent_id")
    = form.input :menu_title, hint: t(".hint.menu_title")
    = form.input :forward_url, hint: t(".hint.forward_url")

  .action
    = form.button :submit, t(".submit"), class: "btn btn-primary"
    = link_to t(".cancel"), :back, class: "cancel"
